				<responseId value="PatientCreateResponse"/>
				<sourceId value="fixture-patient-create"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 201(Created)."/>
				<response value="created"/>
			</assert>
		</action>
		<action>
